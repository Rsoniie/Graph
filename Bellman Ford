*********TC = O() SC = O() FOR FINDING SHORTEST PATH WITH NEGATIVE WEIGHT BUT NO NEGATIVE CYCLE ALSO FOR DETECTING NEGATIVE CYCLE********
#include <bits/stdc++.h> 
int bellmonFord(int n, int m, int src, int dest, vector<vector<int>> &edges) {
    vector<int> dis(n+1, 1e9);
    dis[src] = 0;
    for(int i=1;i<=n;i++)
    {
        for(int j=0;j<m;j++)
        {
            int u = edges[j][0];
            int v = edges[j][1];
            int wt = edges[j][2];
            if( dis[u] != 1e9 &&(dis[u] + wt < dis[v]))
            {
                dis[v] = wt+dis[u];
            }
        }
    }

    // check for negative cycle
    bool check = false;
    for(int i=0;i<m;i++)
    {
        int u = edges[i][0];
        int v = edges[i][1];
        int wt = edges[i][2];
        if(dis[u] != 1e9 &&(dis[u] + wt < dis[v]))
        {
            check = true;
        }
    }

    if(check == true)
    {
        return -1;

    }
    return dis[dest];
}
